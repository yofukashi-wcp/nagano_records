<h2>管理者様情報を入力してください</h2>

  <div class="mx-auto" style="width: 720px; padding: 20px;">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-auto form-control form-control-lg" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワード確認", class: "btn btn-success mx-auto btn-lg" %>
      </div>
    <% end %>
  </div>

<%= render "admins/shared/links" %>
