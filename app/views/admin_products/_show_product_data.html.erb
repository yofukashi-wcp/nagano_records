<!-- Page header -->
<div class="container">
  <div class="row">
    <div class="col">
      <h2>商品詳細</h2>
    </div>
    <div class="col text-right">
      <%# if admin_signed_in? %>
        <%= link_to "編集", admin_product_path(product), class: "btn btn-success" %>
        <%= link_to "削除", admin_product_path(product), method: :delete, class: "btn btn-danger" %>
      <%# end %>
    </div>
  </div>
</div>

<!-- Product data -->
<div class="container">
  <div class="row">
    <div class="col-3">
      <a href="#!" data-toggle="modal" data-target="#jaketView">
        <%= attachment_image_tag product, :jacket_image, fallback: "no_image.png", class: "img-thumbnail" %>
      </a>
    </div>
    <div class="col-5">
      <h3><%= product.name %></h3>
      <table>
        <tbody>
          <tr>
            <th>アーティスト</th>
            <td><%= product.artist.name %></td>
          </tr>
          <tr>
            <th>レーベル</th>
            <td><%= product.label.name %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= product.genre.name %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <p class="lead">価格(税込)　¥ <%= product.price.to_s.reverse.gsub( /(\d{3})(?=\d)/, '\1,').reverse %></p>
      <p class="lead">在庫　<%= product.stock %></p>
      <%# if user_signed_in? %>
        <%= form_with url: carts_path, class: "form-inline align-items-center" do |f| %>
          <%= f.label :quantity, "数量" %>
          <%= f.text_field :quantity, class: "ml-1 mr-2 form-control", type: "number", min: "1", max: "99", value: "1" %>
          <%= f.submit "カート追加", class: "btn btn-primary" %>
        <% end %>
      <%# end %>
    </div>
  </div>
</div>

<!-- Track data -->
<div class="container mt-5">
  <table class="table table-striped">
    <thead class="bg-primary text-white">
      <tr>
        <th>Disc</th>
        <th>#</th>
        <th>曲名</th>
        <th>再生時間</th>
      </tr>
    </thead>
    <tbody>
      <% product.tracks.each do |track| %>
        <tr>
          <td><%= track.disc %></td>
          <td><%= track.number %></td>
          <td><%= track.name %></td>
          <td><%= track.length %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Product summary -->
<div class="container my-5">
  <h3>商品の紹介</h3>
  <div class="bg-light">なし</div>
</div>

<!-- Jaket View Modal -->
<div class="modal fade" id="jaketView" tabindex="-1" role="dialog" aria-labelledby="jaketViewLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= product.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= attachment_image_tag product, :jacket_image, fallback: "no_image.png", class: "img-thumbnail", data_toggle: "modal", data_target: "#jaketView" %>
      </div>
    </div>
  </div>
</div>