<h2>Edit User</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="mx-auto" style="width: 720px; padding: 20px;">

    <div class="form-group form-inline">
      <div class="field" style="margin-right: 30px;">
        <%= f.label :first_name, class: "float-left" %><br />
        <%= f.text_field :first_name, autofocus: true, class: "col-auto form-control form-control-lg" %>
      </div>

      <div class="field", style="display: inline-block">
        <%= f.label :名前（名）, class: "float-left" %><br />
        <%= f.text_field :last_name, class: "col-auto form-control form-control-lg" %>
      </div>
    </div>

    <div class="form-group form-inline">
      <div class="field", style="margin-right: 30px;">
        <%= f.label :名前（セイ）, class: "float-left" %><br />
        <%= f.text_field :first_name_ruby, class: "col-auto form-control form-control-lg" %>
      </div>
      <div class="field">
        <%= f.label :名前（メイ）, class: "float-left" %><br />
        <%= f.text_field :last_name_ruby, class: "col-auto form-control form-control-lg" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :郵便番号 %><br />
      <%= f.number_field :zip_code, class: "col-auto form-control form-control-lg" %>
    </div>

    <div class="field">
      <%= f.label :住所 %><br />
      <%= f.text_field :address, class: "col-auto form-control form-control-lg" %>
    </div>

    <div class="field">
      <%= f.label :電話番号 %><br />
      <%= f.number_field :phone_number, class: "col-auto form-control form-control-lg" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autocomplete: "email", class: "col-auto form-control form-control-lg" %>
    </div>
    
    <div class="actions text-right">
      <%= f.submit "登録変更", class: "btn btn-success mx-auto btn-lg" %>
    </div>
  </div>
<% end %>
