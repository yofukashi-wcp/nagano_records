<div class="container">
   <div class="row">
        <div class="col-md-10 mx-auto">

            <div class="row">
                <div class="col border rounded shadow-lg">
                    <h2 class="pt-md-3">ユーザー詳細</h2>
                    <%= render "users/list", user: @user %>
                </div>
            </div>

            <div class="row">
                <div class="col border rounded bg-light">
                    <h2 class="pt-md-3">購入履歴</h2>
                    <%= render "admin_orders/order_list", orders: @orders%>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                <%= link_to "ユーザー退会", admin_user_path, method: :delete, class: "btn btn-danger btn-lg", data: {confirm: "本当に削除しますか？"} %>
                </div>
            </div>  
            
        </div>
    </div>
</div>
