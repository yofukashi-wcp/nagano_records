<div class="container">
   <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="row">
                <div class="col border rounded shadow-lg">
                    <h3>ユーザー詳細</h3>
                    <%= render "users/list", user: @user %>
                </div>
            </div>

            <div class="row">
                <div class="col border rounded bg-light">
                    <h3>購入履歴</h3>
                </div>
                <%= paginate @user %>
            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                <%= link_to "ユーザー退会", admin_user_path, method: :delete, class: "btn btn-danger btn-lg", data: {confirm: "本当に削除しますか？"} %>
                </div>
            </div>  
            
        </div>
    </div>
</div>
