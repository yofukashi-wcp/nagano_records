    <h3>ショッピングカート</h3>

<%= form_with url: new_order_path, local: true do |f| %>
<% @carts.each do |cart| %>

    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">"カートを空にする"</button>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">"確認"</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
            </div>
            <div class="modal-body">本当にカートを空にしてよろしいですか？</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <%= link_to "確定", @carts, method: :delete,　class:"btn btn-success" %>
                </div>
            </div>
        </div>
    </div>

    <table>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <tr>
            <td text-align: center;>
                <img height= "80" src="<%= attachment_image_tag cart, :product.jacket_image_id %>"/>
            </td>
            <td>
                <p>タイトル:<%= cart.product.name %></p><br>
                <p>アーティスト:<%= cart.artist.name %></p>
            </td>
            <td>
                <p>価格:<%= cart.product.price %>円</p><br>
                <p>数量変更:<%= f.number_field :cart.quantity %></p>
            </td>
            <td>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">"削除"</button>
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">"確認"</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                        </div>
                        <div class="modal-body">本当にカートから削除しますか？</div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <%= link_to  "削除", cart_path(cart), method: :'delete' class: "btn btn-danger"%>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        <div>小計:<%= @total_price %></div>
        <% f,submit "購入手続きへ", class:"btn btn-success" %>
    </table>