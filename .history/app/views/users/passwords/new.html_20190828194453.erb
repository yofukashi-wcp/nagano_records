<h3 class="col-6 offset-md-2" , style="padding-left: 200px; padding-top: 40px;">パスワードお忘れの場合</h3>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  <div class="mx-auto container">
    <div class="text-align">
      <div class="field col-7 offset-md-2">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-offset-3 form-control form-control-lg w-100" %>
      </div>

      <div class="actions text-right col-9 mt-md-5">
        <%= f.submit "送信", class: "btn btn-success mx-auto btn-lg" %>
      </div>
    </div>
  <% end %>
  <div class="col-9 mt-md-3 text-right">
      <%= render "users/shared/links"%>
  </div>
	</div>