<h3 class="col-6 offset-md-2", style="padding-left: 200px; padding-top: 20px;">ログイン</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="mx-auto container">
    <div class="text-align">
      <div class="field col-6 offset-md-2">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-offset-3 form-control form-control-lg w-100" %>
      </div>

      <div class="field col-6 offset-md-2 mt-md-2">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-offset-3 form-control form-control-lg w-100" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field text-right col-8">
          <%= f.check_box :remember_me, class: "form-check-label" %>
          <%= f.label :このログインを記憶する %>
        </div>
      <% end %>
    </div>
      <div class="actions text-right col-8">
        <%= f.submit "ログイン", class: "btn btn-success mx-auto btn-lg", style: "margin-top: 30px;" %>
      </div>
    <% end %>
  </div>
<div class="text-right col-8", style="margin-top: 30px;">
<%= render "users/shared/links"%>
</div>